<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/electricBlue</item>
        <item name="colorPrimaryDark">@color/aspenBlue</item>
        <item name="colorAccent">@color/Maya</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_up</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_down</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_up</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_down</item>
    </style>

</resources>